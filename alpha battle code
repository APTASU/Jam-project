import random
eAtk = 5
eHp = 25
Edef = 2
ecric =20
Hp = 50
atk = 10
dEf = 5
cric = 40
dmg = 0
edmg = 0
def ecrit():
  edmg = 5
  ecricr = random.randint(0,100)
  if ecricr <= ecric:
    edmg = eAtk * 1.5
  Hpre = edmg - Edef
  return Hpre

while Hp>0:
  ecrit()
  einku = ecrit()
  Hp = Hp - einku
  if Hp <= 0:
    print("you die")
    
  elif Hp >0:
    print(Hp)
